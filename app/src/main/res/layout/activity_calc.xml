            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clacButtonNum6"
            android:onClick="onClick"
            android:text="6"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clacButton2"
            android:onClick="onClick"
            android:text="-"
            />



    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clacButtonNum7"
            android:onClick="onClick"
            android:text="7"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clacButtonNum8"
            android:onClick="onClick"
            android:text="8"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clacButtonNum9"
            android:onClick="onClick"
            android:text="9"
            />
